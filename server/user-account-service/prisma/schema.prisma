// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                Int       @id @default(autoincrement())
  username          String    @unique
  email             String    @unique
  password          String
  firstName         String?
  lastName          String?
  status            String    @default("ACTIVE")  // ACTIVE, TERMINATED, ARCHIVED
  role              String    @default("USER")   // USER, ADMIN
  phoneNumber       String?
  address           String?
  city              String?
  country           String?
  investmentAmount  Float?    @default(0)
  portfolio         String?   // JSON stored as string
  lastLoginAt       DateTime?
  loginCount        Int       @default(0)
  emailVerified     Boolean   @default(false)
  emailVerificationToken String?   @unique
  emailVerificationExpires DateTime?
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  terminatedAt      DateTime?
  terminationReason String?
  
  // Relationships
  auditLogs         AuditLog[]
  auditLogsPerformed AuditLog[] @relation("AdminAudits")
  sessions          Session[]
  
  @@index([email])
  @@index([status])
  @@index([createdAt])
  @@index([emailVerificationToken])
}

model Session {
  id        Int     @id @default(autoincrement())
  userId    Int
  token     String  @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([userId])
  @@index([token])
}

model AuditLog {
  id            Int       @id @default(autoincrement())
  userId        Int
  actionType    String    // e.g., "USER_DELETED", "USER_TERMINATED", "DATA_EXPORTED"
  description   String?
  oldData       String?   // JSON stored as string
  newData       String?   // JSON stored as string
  performedBy   Int?      // Admin who performed the action
  ipAddress     String?
  userAgent     String?
  createdAt     DateTime  @default(now())
  
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  admin         User?     @relation("AdminAudits", fields: [performedBy], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([actionType])
  @@index([createdAt])
}
model AdminAuditLog {
  id            Int       @id @default(autoincrement())
  adminId       Int
  targetUserId  Int
  action        String    // e.g., "DELETE_USER", "TERMINATE_USER", "RESET_PASSWORD"
  reason        String?
  result        String    // e.g., "SUCCESS", "FAILED"
  createdAt     DateTime  @default(now())
  
  @@index([adminId])
  @@index([targetUserId])
  @@index([createdAt])
}